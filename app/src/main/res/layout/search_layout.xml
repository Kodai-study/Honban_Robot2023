<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="213dp"
        android:layout_height="388dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="156dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="287dp">

            <RadioButton
                android:id="@+id/OK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="54dp"
                android:text="@string/OK"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <RadioButton
                android:id="@+id/IC1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:text="IC1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioButton
                android:id="@+id/IC2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:text="IC2"
                app:layout_constraintStart_toEndOf="@+id/IC1"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioButton
                android:id="@+id/DIPSW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DIPSW"
                app:layout_constraintStart_toEndOf="@+id/R"
                app:layout_constraintTop_toBottomOf="@+id/Freq" />

            <RadioButton
                android:id="@+id/R"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:text="R"
                app:layout_constraintBaseline_toBaselineOf="@+id/DIPSW"
                app:layout_constraintStart_toStartOf="parent" />

            <RadioButton
                android:id="@+id/Volt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:text="Volt"
                app:layout_constraintBottom_toTopOf="@+id/DIPSW"
                app:layout_constraintEnd_toEndOf="@+id/DIPSW" />

            <RadioButton
                android:id="@+id/Freq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Freq"
                app:layout_constraintStart_toEndOf="@+id/DIPSW"
                app:layout_constraintTop_toBottomOf="@+id/IC2" />

            <RadioButton
                android:id="@+id/NG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="52dp"
                android:layout_marginBottom="52dp"
                android:text="@string/NG"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>